abbr .. 'cd ..'
abbr ... 'cd ../..'
abbr c cargo
abbr cc 'cargo check'
abbr cf 'cargo fmt'
abbr cr 'cargo run'
abbr crr 'cargo run --release'
abbr ct 'cargo test'
abbr ctr 'cargo test --release'
abbr dc 'docker container'
abbr dce 'docker container exec -it'
abbr dcl 'docker container ls'
abbr dcr 'docker container run'
abbr dcs 'docker container start'
abbr g git
abbr ga 'git add'
abbr gaa 'git add -A'
abbr gb 'git branch'
abbr gc 'git commit'
abbr gca 'git commit --amend'
abbr gcm 'git commit -m'
abbr gd 'git diff'
abbr gf 'git fetch'
abbr gg 'git grep'
abbr gh 'git checkout'
abbr gl 'git log --oneline'
abbr glg "git log --graph --date=short --decorate=short '--pretty=format:%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'"
abbr gll 'git log --oneline -n5'
abbr gls 'git ls-files'
abbr glv 'git log'
abbr gm 'git merge'
abbr gr 'git remote -v'
abbr groot 'cd (git rev-parse --show-toplevel)'
abbr gs 'git status -s'
abbr gsh 'git show'
abbr p popd

alias grep 'grep --color=auto'
alias ls 'ls --color=auto'
alias ll 'ls -lh --color=auto'
alias la 'ls -alh --color=auto'